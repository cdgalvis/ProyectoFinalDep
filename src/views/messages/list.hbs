<div class="container">
    <div class="row mt-5">
        <div class="col-12 m-1">
            <div class="card">
                <h3 class="card-header">Lista de Mensajes</h3>
                <div class="card-body">
                    <a href="/addMessage" class="btn btn-primary m-1"> Crear un mensaje </a>

                    {{#if datos}}
                        <table class="table text-center">
                            <thead>
                                <tr class="table-dark">
                                    <th scope="col" class="col-4"> Id  </th>
                                    <th scope="col"> Id Mensaje Entrante   </th>
                                    <th scope="col"> Id Mensaje Saliente       </th>
                                    <th scope="col"> Mensaje  </th>
                                    <th scope="col"> Acciones   </th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                {{#each datos}}
                                    <tr>
                                        <td> {{msg_id}} </td>
                                        <td> {{incoming_msg_id}} </td>
                                        <td> {{outgoing_msg_id}} </td>
                                        <td> {{msg}} </td>
                                        <td> 
                                            <div class="btn-group">
                                                <a href="/editMessage/{{msg_id}}" class="btn btn-warning p-2">
                                                    <i class="fa-solid fa-pencil"></i>
                                                </a>
                                                <a href="/deleteMessage/{{msg_id}}" class="btn btn-danger p-2">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {{/each}}

                            </tbody>
                        </table>

                    {{else}}

                        <div class="card text-center mx-auto">
                            <div class="card-header">
                                <h3> Debes crear un mensaje</h3>
                            </div>
                            <div class="card-body">
                                <p>Presiona el boton Crear un mensaje para que puedas registrar uno</p>
                            </div>
                        </div>

                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>