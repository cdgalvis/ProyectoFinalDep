<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2"> Lista de Mensajes</h3>

        {{#if datos}}

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4"> Id  </th>
                        <th scope="col"> Id Mensaje Entrante   </th>
                        <th scope="col"> Id Mensaje Saliente       </th>
                        <th scope="col"> Mensaje  </th>
                        <th scope="col"> Acciones   </th>
                    </tr>
                </thead>
                <tbody>
                    
                    {{#each datos}}
                        <tr>
                            <td> {{msg_id}} </td>
                            <td> {{incoming_msg_id}} </td>
                            <td> {{outgoing_msg_id}} </td>
                            <td> {{msg}} </td>
                            <td> 
                                <div class="btn-group">
                                    <a href="/editMessage/{{id}}" class="btn btn-warning p-2">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <a href="/deleteMessage/{{id}}" class="btn btn-danger p-2">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}

                </tbody>
            </table>

        {{else}}

            <div class="card text-center mx-auto">
                <div class="card-header">
                    <h3> Debes crear un mensaje</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas registrar un mensaje en la aplicacion</p>
                    <a href="/addMessage" class="btn btn-primary"> Ir a crear</a>
                </div>
            </div>

        {{/if}}

    </div>
</div>